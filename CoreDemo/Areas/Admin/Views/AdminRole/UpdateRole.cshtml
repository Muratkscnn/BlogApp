@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role Başlığı</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <button class="btn btn-warning">Rolü Güncelle</button>
</form>

