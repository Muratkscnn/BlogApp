@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Giden Kutusu</h1>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderilen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>

            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-danger" id="Btnsil">Mesajı Aç</a></td>
        </tr>

    }
</table>
<a href="/Message/SendMessage" class="btn btn-info" id="btnadd">Yeni Mesaj Oluştur</a>

